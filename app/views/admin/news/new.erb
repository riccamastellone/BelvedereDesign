<h1>Nuova Notizia o Evento</h1>

<%= form_for :news, url: '/admin/news' do |f| %>
    <p>
      <%= f.label :Titolo %><br>
      <%= f.text_field :title,  :class=>'input-block-level' %>
    </p>

    <p>
      <%= f.label :Testo %><br>
      <%= f.text_area :text, :style=>'width:100%' %>
    </p>

    <p>
      <%= f.submit  'Salva', :class => 'btn btn-primary' %>
      <%= link_to 'Indietro', '/admin/news', :class => 'btn' %>
    </p>
<% end %>

